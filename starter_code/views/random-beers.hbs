<div class="beers-container">
  {{#each beers}}

  <div class="beer-container">

    <div class="beer-image">
      {{#with image_url as |value key|}}
      <img src={{value}} alt="" class="beer-card-img">
      {{else}}
      {{/with}}
    </div>

    <div class="beer-descritption">
      <h3 class="card-title">{{this.name}}</h3>
      <h5 class="card-subtitle">{{this.tagline}}</h5>
      <p class="card-text">{{this.description}}</p>

      <div class="food-pairing">
        <ul><strong>Food Pairing</strong>
          {{#each food_pairing}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>

      <div class="brewer-tips">
        <p class="card-text"><strong>Brewer Tips:</strong> {{this.brewers_tips}}</p>
      </div>

    </div>

  </div>

  {{/each}}

</div>